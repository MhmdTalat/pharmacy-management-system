<!DOCTYPE html>
 
@inject ApplicationDbContext _context
@using Microsoft.AspNetCore.Http

@{
    // Simulate getting the CartId — you should replace this with session or user logic
    int cartId = 1; // Replace with: Context.Session.GetInt32("CartId") ?? 0;

    // Sum quantity of all items in the cart
    int cartItemsCount = _context.Cartitems
        .Where(ci => ci.Cartid == cartId)
        .Sum(ci => (int?)ci.Quantity) ?? 0;
}
<html lang="en">

<head>
    <title>@ViewBag.Title - Pharma Professional</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Professional pharmaceutical products and healthcare solutions">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/fonts/icomoon/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/magnific-popup.css">
    <link rel="stylesheet" href="/css/jquery-ui.css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/aos.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


    <style>
        :root {
            --primary-color: #2c5aa0;
            --secondary-color: #34d399;
            --accent-color: #f59e0b;
            --dark-color: #1f2937;
            --light-gray: #f8fafc;
            --border-color: #e5e7eb;
        }

        body {
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            color: var(--dark-color);
        }

        .site-navbar {
            background: #ffffff;
            box-shadow: 0 2px 20px rgba(0,0,0,0.08);
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .site-logo a {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            text-decoration: none;
            letter-spacing: -0.02em;
        }

        .site-menu li a {
            color: var(--dark-color);
            font-weight: 500;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
            position: relative;
        }

            .site-menu li a:hover {
                color: var(--primary-color);
            }

            .site-menu li a::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 0;
                height: 2px;
                background: var(--primary-color);
                transition: all 0.3s ease;
                transform: translateX(-50%);
            }

            .site-menu li a:hover::after {
                width: 80%;
            }

        .icons-btn {
            color: var(--dark-color);
            padding: 0.75rem;
            border-radius: 50%;
            transition: all 0.3s ease;
            position: relative;
        }

            .icons-btn:hover {
                background: var(--light-gray);
                color: var(--primary-color);
            }

        .bag .number {
            background: var(--accent-color);
            color: white;
            border-radius: 50%;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            position: absolute;
            top: -5px;
            right: -5px;
            min-width: 20px;
            text-align: center;
        }

        .site-footer {
            background: var(--dark-color);
            color: #9ca3af;
            padding: 3rem 0 1rem;
            margin-top: 4rem;
        }

        .footer-heading {
            color: white;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        .site-footer a {
            color: #9ca3af;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .site-footer a:hover {
                color: var(--secondary-color);
            }

        .dropdown {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            border: none;
            padding: 0.5rem 0;
        }

            .dropdown li a {
                padding: 0.75rem 1.5rem;
                color: var(--dark-color);
            }

                .dropdown li a:hover {
                    background: var(--light-gray);
                    color: var(--primary-color);
                }

        .search-wrap {
            background: rgba(0,0,0,0.8);
        }

            .search-wrap .form-control {
                border: none;
                border-radius: 2rem;
                padding: 1rem 1.5rem;
                font-size: 1.1rem;
            }
    </style>
</head>

<body>

    <div class="site-wrap">

        <!-- Navigation Bar -->
        <div class="site-navbar py-2">
            <div class="search-wrap">
                <div class="container">
                    <a href="#" class="search-close js-search-close"><span class="icon-close2"></span></a>
                    <form action="#" method="post">
                        <input type="text" class="form-control" placeholder="Search products, categories, or health topics...">
                    </form>
                </div>
            </div>
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="logo">
                        <div class="site-logo">
                            <a href="/" class="js-logo-clone">Pharma<span style="color: var(--secondary-color);">Pro</span></a>
                        </div>
                    </div>

                    <div class="main-nav d-none d-lg-block">
                        <nav class="site-navigation text-center" role="navigation">
                            <ul class="site-menu js-clone-nav d-none d-lg-block">
                                <li><a href="/">Home</a></li>
                                <li class="has-children">
                                    <a href="/products">Products</a>
                                    <ul class="dropdown">
                                        <li><a href="/products/prescription">Prescription Drugs</a></li>
                                        <li><a href="/products/supplements">Supplements</a></li>
                                        <li><a href="/products/vitamins">Vitamins & Minerals</a></li>
                                        <li><a href="/products/wellness">Wellness Products</a></li>
                                        <li><a href="/products/medical-devices">Medical Devices</a></li>
                                    </ul>
                                </li>
                                <li class="has-children">
                                    <a href="/services">Services</a>
                                    <ul class="dropdown">
                                        <li><a href="/services/consultation">Health Consultation</a></li>
                                        <li><a href="/services/delivery">Home Delivery</a></li>
                                        <li><a href="/services/insurance">Insurance Claims</a></li>
                                        <li><a href="/services/wellness">Wellness Programs</a></li>
                                    </ul>
                                </li>
                                <li><a href="/about">About Us</a></li>
                                <li><a href="/contact">Contact</a></li>
                            </ul>
                        </nav>
                    </div>

                    <div class="icons">
                        <a href="#" class="icons-btn d-inline-block js-search-open" title="Search">
                            <span class="icon-search"></span>
                        </a>
                        <a href="/wishlist" class="icons-btn d-inline-block" title="Wishlist">
                            <span class="icon-heart"></span>
                        </a>
                        <a href="/cart" class="icons-btn d-inline-block bag" title="Shopping Cart">
                            <span class="icon-shopping-bag"></span>
                            <span class="number">@cartItemsCount</span>
                        </a>
                        <!-- ✅ Login Icon -->
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <a href="/UserAccount/UserDashboard" class="icons-btn d-inline-block" title="User Dashboard">
                                <span class="icon-user"></span> @Context.Session.GetString("Username")
                            </a>
                            <a href="/UserAccount/Logout" class="icons-btn d-inline-block" title="Logout">
                                <span class="icon-log-out"></span>
                            </a>
                        }
                        else
                        {
                            <a href="/UserAccount/Login" class="icons-btn d-inline-block" title="Login">
                                <span class="icon-log-in"></span>
                            </a>
                        }

                        <a href="/account" class="icons-btn d-inline-block" title="My Account">
                            <span class="icon-user"></span>
                        </a>
                        <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none">
                            <span class="icon-menu"></span>
                        </a>
                    </div>

                </div>
            </div>

        </div>

        <div class="container-fluid px-0">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                        <div class="block-7">
                            <h3 class="footer-heading">About PharmaPro</h3>
                            <p class="mb-4">Your trusted partner in healthcare solutions. We provide high-quality pharmaceutical products, health supplements, and professional medical services to support your wellness journey.</p>
                            <div class="social-links">
                                <a href="#" class="mr-3"><span class="icon-facebook"></span></a>
                                <a href="#" class="mr-3"><span class="icon-twitter"></span></a>
                                <a href="#" class="mr-3"><span class="icon-instagram"></span></a>
                                <a href="#"><span class="icon-linkedin"></span></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-2 mb-4 mb-lg-0">
                        <h3 class="footer-heading">Products</h3>
                        <ul class="list-unstyled">
                            <li><a href="#">Prescription Drugs</a></li>
                            <li><a href="#">Supplements</a></li>
                            <li><a href="#">Vitamins & Minerals</a></li>
                            <li><a href="#">Medical Devices</a></li>
                            <li><a href="#">Wellness Products</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 col-lg-2 mb-4 mb-lg-0">
                        <h3 class="footer-heading">Services</h3>
                        <ul class="list-unstyled">
                            <li><a href="#">Health Consultation</a></li>
                            <li><a href="#">Home Delivery</a></li>
                            <li><a href="#">Insurance Claims</a></li>
                            <li><a href="#">Wellness Programs</a></li>
                            <li><a href="#">24/7 Support</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="block-5 mb-5">
                            <h3 class="footer-heading">Contact Information</h3>
                            <ul class="list-unstyled">
                                <li class="address mb-3">
                                    <span class="icon-location mr-2"></span>
                                    123 Healthcare Boulevard<br>
                                    Medical District, NY 10001
                                </li>
                                <li class="phone mb-3">
                                    <span class="icon-phone mr-2"></span>
                                    <a href="tel:+18005551234">+1 (800) 555-1234</a>
                                </li>
                                <li class="email mb-3">
                                    <span class="icon-envelope mr-2"></span>
                                    <a href="mailto:info@pharmapro.com">info@pharmapro.com</a>
                                </li>
                                <li class="hours">
                                    <span class="icon-clock mr-2"></span>
                                    Mon-Fri: 8AM-8PM<br>
                                    Sat-Sun: 9AM-6PM
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row pt-4 mt-4 border-top">
                    <div class="col-md-6">
                        <p class="mb-0">
                            &copy; <script>document.write(new Date().getFullYear());</script> PharmaPro. All rights reserved.
                        </p>
                    </div>
                    <div class="col-md-6 text-md-right">
                        <p class="mb-0">
                            <a href="/privacy">Privacy Policy</a> |
                            <a href="/terms">Terms of Service</a> |
                            <a href="/sitemap">Sitemap</a>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/jquery-ui.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/aos.js"></script>
    <script src="/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>