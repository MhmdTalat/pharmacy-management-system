@{
    ViewData["Title"] = "Trader Dashboard";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4 text-center" style="width: 100%; max-width: 500px; border-radius: 15px;">
        <div class="card-body">
            <h2 class="mb-3">Welcome Trader 💼</h2>
            <p class="lead">Hello, <strong>@ViewBag.User</strong></p>
            <hr />
            <ul class="list-unstyled">
                <li class="mt-3">
                    <a asp-action="Logout" class="btn btn-outline-danger">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</div>
