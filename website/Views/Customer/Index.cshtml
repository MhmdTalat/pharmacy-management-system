@model IEnumerable<website.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Customer List</h2>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Customerid)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Fullname)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Dateofbirth)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Customerid)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fullname)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dateofbirth)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Customerid" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Customerid" class="btn btn-sm btn-info me-1 text-white">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Customerid" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
